<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMarketManager.SheinCollector.MainPage"
             Title="Shein Cookie Collector">

    <Grid RowDefinitions="Auto,*,Auto,Auto" Padding="10">
        
        <!-- Instructions -->
        <VerticalStackLayout Grid.Row="0" Padding="0,0,0,10">
            <Label Text="Login to Shein" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />
            <Label Text="1. Login to your Shein account below" 
                   FontSize="14" />
            <Label Text="2. Click 'Done' when finished to collect cookies" 
                   FontSize="14" />
        </VerticalStackLayout>

        <!-- WebView -->
        <WebView x:Name="SheinWebView"
                 Grid.Row="1"
                 Source="https://shein.com/user/auth/login" />

        <!-- Buttons -->
        <HorizontalStackLayout Grid.Row="2" 
                              Spacing="10" 
                              HorizontalOptions="Center" 
                              Padding="10">
            <Button x:Name="DoneButton"
                    Text="Done - Collect Cookies"
                    Clicked="OnDoneClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    WidthRequest="200" />
            <Button Text="Reload"
                    Clicked="OnReloadClicked"
                    BackgroundColor="#666666"
                    TextColor="White"
                    WidthRequest="100" />
        </HorizontalStackLayout>

        <!-- Status and Results -->
        <ScrollView Grid.Row="3" MaximumHeightRequest="200">
            <VerticalStackLayout Padding="10">
                <Label x:Name="StatusLabel"
                       Text="Ready to collect cookies..."
                       FontSize="14"
                       FontAttributes="Bold" />
                <Label x:Name="ResultLabel"
                       Text=""
                       FontSize="12"
                       LineBreakMode="WordWrap" />
            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
